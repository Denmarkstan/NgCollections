<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>@ViewBag.Title - Ng-Collections</title>

    <meta name="description" content="ngcollection">
    <meta name="keywords" content="ngcollection">
    <meta name="author" content="ngcollection">
    <link rel="icon" href="~/Content/images/favicon/1.png" type="image/x-icon">
    <link rel="shortcut icon" href="~/Content/images/favicon/1.png" type="image/x-icon">

    <!--Google font-->
    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700,900" rel="stylesheet">

    <!-- Icons -->
    <link rel="stylesheet" type="text/css" href="~/Content/css/fontawesome.css">

    <!--Slick slider css-->
    <link rel="stylesheet" type="text/css" href="~/Content/css/slick.css">
    <link rel="stylesheet" type="text/css" href="~/Content/css/slick-theme.css">

    <!-- Animate icon -->
    <link rel="stylesheet" type="text/css" href="~/Content/css/animate.css">

    <!-- Themify icon -->
    <link rel="stylesheet" type="text/css" href="~/Content/css/themify-icons.css">

    <!-- Bootstrap css -->
    <link rel="stylesheet" type="text/css" href="~/Content/css/bootstrap.css">

    <!-- Theme css -->
    <link rel="stylesheet" type="text/css" href="~/Content/css/color1.css" media="screen" id="color">
    <link href="~/Content/css/ErrorStyles.css" rel="stylesheet" />

   
   

</head>
<body>

    <header>
         
        <div class="container">
            <div class="row">
                <div class="col-sm-12">
                    <div class="main-menu">
                        <div class="menu-left">
                            <div class="navbar">
                                <a href="javascript:void(0)" onclick="openNav()">
                                    <div class="bar-style"><i class="fa fa-bars sidebar-bar" aria-hidden="true"></i></div>
                                </a>
                                <div id="mySidenav" class="sidenav">
                                    <a href="javascript:void(0)" class="sidebar-overlay" onclick="closeNav()"></a>
                                    <nav>
                                        <div onclick="closeNav()">
                                            <div class="sidebar-back text-left"><i class="fa fa-angle-left pr-2" aria-hidden="true"></i> Back</div>
                                        </div>

                                    </nav>
                                </div>
                            </div>
                            <div class="brand-logo">
                                <a href=""><img src="~/Content/images/icon/logo/logo.png" class="img-fluid blur-up lazyload" alt=""></a>
                            </div>
                        </div>
                        <div class="menu-right pull-right">
                            <div>
                                <nav id="main-nav">
                                    <div class="toggle-nav"><i class="fa fa-bars sidebar-bar"></i></div>
                                    <ul id="main-menu" class="sm pixelstrap sm-horizontal">
                                        <li>
                                            <div class="mobile-back text-right">Back<i class="fa fa-angle-right pl-2" aria-hidden="true"></i></div>
                                        </li>
                                        <li>
                                            <a href="~/Home/Index">Home</a>

                                        </li>
                                        <li>
                                            <a href="~/Admin/Index">Admin</a>

                                        </li>
                                        <li>
                                            <a href="~/Admin/EditNgPageWriteups" data-lng="en">Edit all text</a>
                                        </li>
                                        <li>
                                            <a href="~/Blog/List" data-lng="en">Blogs</a>
                                        </li>
                                        <li>
                                            <a href="~/Admin/List" data-lng="en">Products</a>
                                        </li>
                                        <li>
                                            <a href="~/Admin/Orders" data-lng="en">Orders</a>
                                        </li>
                                    </ul>
                                </nav>
                            </div>
                            <div>
                                <div class="icon-nav">
                                    <ul>
                                        <li class="onhover-div mobile-search">
                                            <div><img src="~/Content/images/icon/search.png" onclick="openSearch()" class="img-fluid blur-up lazyload" alt=""> <i class="ti-search" onclick="openSearch()"></i></div>
                                            <div id="search-overlay" class="search-overlay">
                                                <div>
                                                    <span class="closebtn" onclick="closeSearch()" title="Close Overlay">×</span>
                                                    <div class="overlay-content">
                                                        <div class="container">
                                                            <div class="row">
                                                                <div class="col-xl-12">
                                                                    <form>
                                                                        <div class="form-group">
                                                                            <input type="text" class="form-control" id="exampleInputPassword1" placeholder="Search a Product">
                                                                        </div>
                                                                        <button type="submit" class="btn btn-primary"><i class="fa fa-search"></i></button>
                                                                    </form>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </li>

                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <!-- header end -->
    <div class="container">
        @if (TempData["successMessage"] != null)
        {
            <div class="alert alert-success">@TempData["successMessage"]</div>
        }
        @if (TempData["errorMessage"] != null)
        {
            <div class="alert alert-danger">@TempData["errorMessage"]</div>
        }
        @RenderBody()
    </div>


    <!-- tap to top end -->
    <!-- latest jquery-->
    <script src="~/Scripts/js/jquery-3.3.1.min.js"></script>

    <!-- fly cart ui jquery-->
    <script src="~/Scripts/js/jquery-ui.min.js"></script>

    <!-- exitintent jquery-->
    <script src="~/Scripts/js/jquery.exitintent.js"></script>
    <script src="~/Scripts/js/exit.js"></script>

    <!-- popper js-->
    <script src="~/Scripts/js/popper.min.js"></script>

    <!-- slick js-->
    <script src="~/Scripts/js/slick.js"></script>

    <!-- menu js-->
    <script src="~/Scripts/js/menu.js"></script>

    <!-- lazyload js-->
    <script src="~/Scripts/js/lazysizes.min.js"></script>

    <!-- Bootstrap js-->
    <script src="~/Scripts/js/bootstrap.js"></script>

    <!-- Bootstrap Notification js-->
    <script src="~/Scripts/js/bootstrap-notify.min.js"></script>

    <!-- Fly cart js-->
    <script src="~/Scripts/js/fly-cart.js"></script>

    <!-- Theme js-->
    <script src="~/Scripts/js/script.js"></script>
    <script src="~/Scripts/js/jquery.validate.js"></script>
    <script src="~/Scripts/js/jquery.validate.unobtrusive.js"></script>


</body>
</html>
