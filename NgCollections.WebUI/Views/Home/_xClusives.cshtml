@model NgCollections.Domain.Entities.Product
<div class="product-box">
    <div class="img-wrapper">
        <div class="front">
            <a href="~/Product/ProductDetails/@Model.ProductID">
                <img src="~/Uploads/@Model.FrontImageUrl" class="img-thumbnail img-fluid blur-up lazyload bg-img" alt="">
            </a>
        </div>
        <div class="back">
            <a href="~/Product/ProductDetails/@Model.ProductID">
                <img src="~/Uploads/@Model.BackImageUrl"
                     class="img-thumbnail img-fluid blur-up lazyload bg-img" alt="">
            </a>
        </div>
        <div class="cart-info cart-wrap">

            @using (Html.BeginForm("AddToCart", "Cart"))
            {
                <div class="pull-right">
                    @Html.HiddenFor(x => x.ProductID)
                    @Html.Hidden("returnUrl", Request.Url.PathAndQuery)
                    <input type="submit" class="btn btn-success" value="Add to cart" />
                    <i class="ti-shopping-cart"></i>
                </div>
            }
            <a href="javascript:void(0)" title="Add to Wishlist">
                <i class="ti-heart" aria-hidden="true"></i>
            </a>
            <a href="#" data-toggle="modal" data-target="#quick-view" title="Quick View">
                <i class="ti-search" aria-hidden="true"></i>
            </a>
            <a href="#" title="Compare">
                <i class="ti-reload" aria-hidden="true"></i>
            </a>
        </div>
    </div>
    <div class="product-detail">
        <div class="rating"><i class="fa fa-star"></i> <i class="fa fa-star"></i> <i class="fa fa-star"></i> <i class="fa fa-star"></i> <i class="fa fa-star"></i></div>
        <a href="~/Product/ProductDetails/@Model.ProductID">
            <h6>@Model.Name</h6>
        </a>
        <h4>₦@Model.Price</h4>
        <ul class="color-variant">
           available sizes: @Model.AvailableSizes
            @*<li class="bg-light0"></li>
            <li class="bg-light1"></li>
            <li class="bg-light2"></li>*@
        </ul>
    </div>
</div>
